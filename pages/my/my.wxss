.tab {
	float: left;
	width: 33.3333%;
	text-align: center;
	padding: 35rpx 0;
	font-size: 30rpx;
	
}

.topTabSwiper {

	zoom: 1;
}

.topTabSwiper:after {
	content: "";
	clear: both;
	display: block;
}

.tabBorer {
	border-bottom: 3px solid #ff5d0e;
	color: #ff5d0e;
}

.swiper {
	width: 100%;
}

.swiper_con {
	text-align: center;
  position: relative;
  width: 670rpx;
	height: 285rpx;
  margin: 40rpx auto 0rpx auto;
}
.swiper_con>image{
  display: block;
  width: 100%;
  height: 100%;
  margin: 0 auto;
  position: absolute;
  top: 0;
  left: 0;
}

/* 设置大盒子 */
.dahezi{
	width: 90%;
  margin:0rpx auto;
	height: 200rpx;
  position: relative;
  z-index: 6;
  padding: 42rpx 0;
}

.dahezi .mny{
  font-size: 100rpx;
  font-weight: bold;
	color: #fdf57c;
  float: left;
  margin-top: 20rpx;
}
.dahezi .mny::before{
  content: "￥";
  font-size: 50rpx;
  font-weight: normal;
}

.dahezi .cent{
  float: left;
  width: 240rpx;
  text-align: left;
  margin:30rpx 0 0 6rpx;
}
.cent .tit{ 
  font-size: 60rpx;
	color: #fdf57c;
  font-weight: bold;
 }
 .cent .data{ 
   font-size: 20rpx; 
   color: #fff;
   margin-top: 10rpx;
  }
.takeBtn{
  position: absolute;
	top: 50%;
  transform: translateY(-50%);
	right: 0rpx;
	font-size: 30rpx;
	color: #FFFFFF;
	width: 80rpx;
}


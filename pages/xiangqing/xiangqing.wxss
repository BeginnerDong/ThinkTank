/* 设置头部 */
@import "../../wxParse/wxParse.wxss";
.head{
	width: 100%;
	height: 190px;
}
.head>image{
	width: 100%;
	height: 190px;
}
.tab {
	float: left;
	width: 33.3333%;
	text-align: center;
  line-height: 90rpx;
	font-size: 30rpx;
}
.xinxi .WxEmojiView{ 
  display: inline-block;
  padding-top: 0;
  line-height: 40rpx;
}
.topTabSwiper {
	border-top: 1px solid #ccc;
	border-bottom: 1px solid #ccc;
	zoom: 1;
}

.topTabSwiper:after {
	content: "";
	clear: both;
	display: block;
}

.tabBorer {
	border-bottom: 2px solid #FF5D0E;
	color: #FF5D0E;
}

.swiper {
	width: 100%;
}

.swiper_con {
	width: 100%;
	height: 100%;
	padding: 25rpx 0;
}
/* 设置固定 */
.guding{
	width: 100%;
	height: 46px;
	position: fixed;
	bottom: 0px;
	background-color: #FFFFFF;
}
.guding>view:nth-child(1){
	width: 25%;
	height: 52px;
	color: #666666;
	font-size: 13px;
	text-align: center;
	line-height: 22px;
	position: relative;
	top: -1px;
	left: 9px;
}
.guding>view:nth-child(1)>image{
	width: 22%;
	height: 17px;
}
.guding>view:nth-child(2){
	width: 25%;
	height: 52px;
	color: #666666;
	font-size: 13px;
	text-align: center;
	position: relative;
	left: 96px;
	top: -52px;
	line-height: 22px;
}
.guding>view:nth-child(2)>image{
	width: 17%;
	height: 15px;
}
.guding>view:nth-child(3){
		width: 44%;
		height: 47px;
		font-size: 16px;
		text-align: center;
		line-height: 47px;
		color: #FFFFFF;
		background: linear-gradient(to right,#ff5d0e,#ffa70e);
		position: relative;
		left: 209px;
		top: -105px;
}

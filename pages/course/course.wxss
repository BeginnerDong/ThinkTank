a{
	text-decoration: none;
}
/*设置头部 搜索框*/
.course{
	position: relative;
	top: 5px;
	z-index: 200;
	width: 123%;
	height: 40px;
}
.course-on,.course-to{
	box-shadow: #bbbbbb 1px 0px 10px 1px;
}
.course-to{
	width: 59%;
	height: 30px;
	border-radius:100px 0px 0px 100px;
	margin-left: 10px;
	float: left;
	background-color: rgb(255,255,255);
}
.course-to>image{
	width: 20px;
	height: 20px;
	float: left;
	clear: both;
	margin-top: 6px;
	margin-left: 17px;
}
.in{
	width: 200px;
	height: 20px;
	color: rgb(153,153,153);
	margin-left: 50px;
	margin-top: 3px;
	font-size: 12px;
}
.course-on{
	width: 60px;
	height: 30px;
	border-radius:0px 100px 100px 0px;
	margin-left: 281px;
	background: linear-gradient(to right,#ff5d0e,#ffa70e);
	color: #FFFFFF;
	text-align: center;
	line-height: 30px;
	font-size: 14px;
}
/* 设置人气 */
.wwrr{
	font-size: 13px;
	color: rgb(34,34,34);
}
.rrww{
	width: 8px;
	height: 6px;
}
.popularity{
	width: 180px;
	height: 44px;
	line-height: 44px;
	float: left;
	clear: both;
	
}
.evaluate{
	width: 225px;
	height: 44px;
	line-height: 44px;
	
}
/* 设置第一个div */
.foot{
	width: 65%;
	height: 45px;
	margin:auto;
}
/* 设置第二个div */
.foot-f{
	position: relative;
	border-top: 1px solid #f3f3f3;
	width: 100%;
	height: 135px;
}
.foot-f-z{
	position: relative;
	width: 100%;
	height: 135px;
}
.foot-f-x{
	position: relative;
	left: 20px;
	top: 15px;
	width: 125px;
	height: 83px;
}
.foot-f-div{
	position: absolute;
	right: 3px;
	top: 13px;
	width: 200px;
	height: 105px;

}
.picker{
	margin-top: 10px;
	font-size: 13px;
}

.picker-date{
	font-size: 12px;
	color: #ff5d0e;
	margin-top: 59px;
}
.picker-hp{
	position: relative;
	top: -16px;
	right: -33px;
	font-size: 12px;
}
.lucency{
	position: absolute;
	top: 95px;
	left: 20px;
	z-index: 10;
	background-color: #000000;
	opacity: 0.5;
	border-radius:0px 0px 10px 12px;
	color: #FFFFFF;
	width: 125px;
	height: 20px;
	line-height: 20px;
	text-align: center;
	font-size: 11px;
}

.acti-top{
	height: 680px;
}
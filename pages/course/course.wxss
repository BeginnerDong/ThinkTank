/*设置头部 搜索框*/
.course{
	z-index: 200;
	width: 100%;
	height: 70rpx;
  margin: 40rpx 0 20rpx 0;
}
.course-on,.course-to{
	box-shadow: #bbbbbb 1px 0px 10px 1px;
}
.course-to{
	width: 690rpx;
	height: 66rpx;
	border-radius:34rpx;
	margin-left: 50%;
  transform: translateX(-50%);
	background-color: rgb(255,255,255);
  position: relative;
}

.course-to>image{
	width: 32rpx;
	height: 32rpx;
	float: left;
	clear: both;
	margin-top: 20rpx;
	margin-left: 28rpx;
}
.search-to>image{
	width: 32rpx;
	height: 32rpx;
	float: left;
	clear: both;
	margin-top: 17rpx;
	margin-left: 26rpx;
}
.in{
	width: 400rpx;
	height: 66rpx;
	color: rgb(153,153,153);
	margin-left: 80rpx;
	font-size: 24rpx;
}
.course-on{
  width: 112rpx;
	height: 66rpx;
	border-radius:0px 40rpx 40rpx 0px;
	background: linear-gradient(to right,#ff5d0e,#ffa70e);
	color: #FFFFFF;
	text-align: center;
	line-height: 66rpx;
	font-size: 30rpx;
  position: absolute; 
  right: 0; 
  top: 0;
}

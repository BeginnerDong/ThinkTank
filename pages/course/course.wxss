/* 设置第一个div */
.foot{
	width: 90%;
	margin:auto;
}
/* 设置第二个div */
.foot-f{
	border-top: 1px solid #f3f3f3;
	width: 100%;
	height: 228rpx;
  padding:30rpx 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.left-pic{
  width: 250rpx; 
  height: 166rpx;
  border-radius: 10rpx;
  float: left;
  overflow: hidden;
  position: relative;
}
.foot-f-z{
	position: relative;
	width: 100%;
	height: 135px;
}
.foot-f-x{
	width: 100%;
	height: 100%;
}
.foot-f-div{
	width: 420rpx;
	height: 166rpx;
  float: left;
  box-sizing: border-box;
  padding-left:20rpx;
}
.picker{
	margin-top: 16rpx;
	font-size: 30rpx;
  line-height: 40rpx;
  height: 80rpx;
  margin-bottom: 30rpx;
  overflow: hidden;
}

.picker-date{
	font-size: 26rpx;
	color: #ff5d0e;
}
.picker-date::after{
  content: "好评";
  margin-left:6rpx;
  color: #222;
}
